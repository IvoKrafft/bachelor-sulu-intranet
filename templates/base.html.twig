<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bäckerei Schmidt</title>
    {% block meta %}
        {% include "@SuluWebsite/Extension/seo.html.twig" with {
            "seo": extension.seo|default([]),
            "content": content|default([]),
            "localizations": localizations|default([]),
            "shadowBaseLocale": shadowBaseLocale|default(),
        } %}
    {% endblock %}

    {% block style %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>


{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ sulu_content_root_path() }}"><img src="/resources/bs_logo.svg" alt="Bäckerei Schmidt" class="logo"></a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    {% for item in sulu_navigation_root_tree() %}
                        <li class="nav-item mx-auto">
                            <a class="nav-link" href="{{ sulu_content_path(item.url, item.webspaceKey) }}" title="{{ item.title }}">{{ item.title }}</a>
                        </li>
                    {% endfor %}

                    <li class="nav-item mx-auto">
                        <a class="nav-link" href="/{{ app.user ? 'logout' : 'login'}}">{{ app.user ? 'Logout' : 'Login'}}</a>
                    </li>
                </ul>

                {# <form class="form-inline my-2 my-lg-0" action="{{ path('sulu_search.website_search') }}" method="GET">
                        <input class="form-control" name="q" type="search" placeholder="Suchbegriff"/>
                        <button class="btn btn-outline-success" type="submit">Suchen</button>
                    </form> #}
            </div>
        </div>
    </nav>
{% endblock %}

<main>
    <div class="container-fluid mt-4 p-3">
        {% block content %}{% endblock %}
    </div>
</main>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
