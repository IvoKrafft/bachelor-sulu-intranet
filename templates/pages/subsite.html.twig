{% extends "base.html.twig" %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">{{ content.title }}</h1>

        {{ content.article|raw }}

        <div class="list-group">
            {% for item in sulu_navigation_tree(uuid) %}
                <a class="list-group-item list-group-item-action d-flex justify-content-between" href="{{ sulu_content_path(item.url, item.webspaceKey) }}" title="{{ item.title }}">
                    <p class="m-0">{{ item.title }}</p>
                    <i class="bi bi-chevron-right"></i>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
